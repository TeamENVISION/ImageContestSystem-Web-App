@using Microsoft.AspNet.Identity
@model ImageContestSystem.Web.Models.ViewModels.DetailsContestViewModel

@{
    ViewBag.Title = "DetailsById";
    
    if (this.User.IsInRole("admin") || this.User.Identity.GetUserId() == @Model.OwnewId)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.ContestId }, new {@class = "btn btn-primary"});
    }
}

<div class="row text-center">
    <div class="row" id="box-search">
        <div class="thumbnail text-center">
            <img src="@Model.Pictures.OrderByDescending(p => p.VotesCount).First().Url" alt="Most liked pictures" class="img-responsive">
            <div class="caption">
                <h3>@Model.Title</h3>
                <p>@Model.Description</p>
                <span class="img-circle"><p> </p>@Model.DaysLeft <p>days left</p></span>
            </div>
        </div>
        <p>Winner: @Model.WinnerCount</p>
        <p>Prize: @Model.PrizesName</p>
    </div>
    <p>
        <span class="text-success">Start Date: @Model.StartDate</span>
    </p>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
